<%= form_with(model: animal, local: true, id: 'animal_creation') do |form| %>
  <% if animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
      <% animal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
<div id="trait_wrapper">
  <%= form.text_field :traits, multiple: true %>
<a href="javascript:void(0);" class="add_trait" title="Add field"><%= fa_icon "plus" %></a>
</div>


  <div class="field">
    <%= form.label :p_date %>
    <%= form.date_select :p_date %>
  </div>

  <div class="field">
    <%= form.label :h_date %>
    <%= form.date_select :h_date %>
  </div>

  <%= form.file_field :images, multiple: true %>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
